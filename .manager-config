# Air P2P Database - Manager Configuration
# Domain-agnostic distributed database designed for the world
# Not tied to any specific domain - works globally

# Project metadata
PROJECT_TYPE="typescript"
PROJECT_DESCRIPTION="Domain-Agnostic Distributed P2P Database"
PROJECT_VERSION="0.0.1"
PROJECT_PORT="8765"

# Build configuration  
BUILD_COMMAND="npm run build"
BUILD_OUTPUT="dist/"
BUILD_REQUIRED="true"

# Service configuration
SERVICE_TYPE="daemon"
SERVICE_RESTART="always"
SERVICE_WANTS="network-online.target"
SERVICE_AFTER="network.target"

# Dependencies
SYSTEM_DEPS="node npm git"
NODE_VERSION_MIN="18"

# Installation paths
INSTALL_ADDITIONAL_FILES="package.json tsconfig.json"
INSTALL_ADDITIONAL_DIRS="src/ dist/"

# Auto-update settings
AUTO_UPDATE_ENABLED="true"
AUTO_UPDATE_BRANCH="main"
AUTO_UPDATE_REBUILD="true"

# Monitoring
HEALTH_CHECK_COMMAND="curl -s http://localhost:8765/health || node dist/cli.js manager:status"
HEALTH_CHECK_INTERVAL="300"

# XDG compliance
CONFIG_FILES="config.json"
DATA_FILES="air.db locks/"
STATE_FILES="air.pid air.state"